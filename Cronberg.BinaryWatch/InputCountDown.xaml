<Window x:Class="Cronberg.BinaryWatch.InputCountDown"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cronberg.BinaryWatch"
        mc:Ignorable="d"
        FontSize="20"
        Title="InputCountDown" Height="200" Width="350">
    <Grid>
        <Label Content="Count minutes" HorizontalAlignment="Left" Margin="24,24,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.429,-2.055"/>
        <Label Content="Count to" HorizontalAlignment="Left" Margin="24,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.429,-2.055"/>
        <TextBox x:Name="txtMinutes" HorizontalAlignment="Left" Margin="210,28,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtCountTo" HorizontalAlignment="Left" Margin="210,70,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Ok" Width="100" HorizontalAlignment="Left" Margin="230,119,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
